{% if video.vars.data.id is not empty %}
<div class="mini-edit-bloc">

    <div class="edit-links">
        <a data-toggle="modal" data-target="#VideoEditModal{{ video.vars.data.id }}">
            <span class="oi oi-pencil" title="pencil" aria-hidden="true"></span>
        </a>


        <a href="javascript:void(0);" id="{{ csrf_token('delete' ~ video.vars.data.id) }}" data-href="{{ path('video_delete', {'id': video.vars.data.id}) }}" class="deleteElement" onclick="return confirm('Are you sure you want to delete this item?');">
            <span class="oi oi-trash" title="trash" aria-hidden="true"></span>
        </a>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="VideoEditModal{{ video.vars.data.id }}" tabindex="-1" role="dialog" aria-labelledby="VideoEditModal{{ video.vars.data.id }}Title" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Video</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    {{ form_row(video.url) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endif %}
