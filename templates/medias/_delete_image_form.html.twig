<form method="post" action="{{ path('image_delete', {'id': image.vars.data.id }) }}" onsubmit="return confirm('Are you sure you want to delete this image?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.vars.data.id) }}">
    <button class="btn">Delete</button>
</form>
