{% extends 'base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
{% endblock %}

{% block title %}TrickSlider{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row marginTop30">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2>Password Reset</h2>
                <hr>
            </div>
        </div>


        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

                <div class="form-group">
                    <label class="sr-only" for="password">Password</label>
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><span class="oi oi-key"></span></div>
                        {{ form_row(form.plainPassword.first) }}
                    </div>
                </div>
            </div>
            <div class="col-md-3">

            </div>
        </div>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

                <div class="form-group">
                    <label class="sr-only" for="password">Repeat Password</label>
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><span class="oi oi-key"></span></div>
                        {{ form_row(form.plainPassword.second) }}
                    </div>
                </div>
            </div>
            <div class="col-md-3">

            </div>
        </div>

        <div class="row" style="padding-top: 1rem">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success marginBottom30" role="alert">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button type="submit" class="btn btn-success"><span class="oi oi-task"></span>Save</button>
            </div>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}


