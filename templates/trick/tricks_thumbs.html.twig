{% for trick in tricks %}

    <div class="col-lg-2 col-md-2 col-6 trick-vignette">
        <div class="card">
            <a href="{{ path('trick_show', {'id': trick.id}) }}" class="items-sm">
                <img class="card-img-top trick-vignette-img" src="{{ asset(trick.topImage.webPath|default('img/trick/default.jpg')) }}">
            </a>
            <a href="javascript:void(0);" data-href="{{ path('trick_show', {'id': trick.id, 'modal':1}) }}" class="openModal items-lg">
                <img class="card-img-top trick-vignette-img" src="{{ asset(trick.topImage.webPath|default('img/trick/default.jpg')) }}">
            </a>
        <div class="card-body flex-content">
            <div>
                <a href="{{ path('trick_show', {'id': trick.id}) }}" class="items-sm"><h5 class="card-title">{{ trick.name }}</h5></a>
                <a href="javascript:void(0);" data-href="{{ path('trick_show', {'id': trick.id, 'modal': 1}) }}" class="openModal items-lg"><h5 class="card-title">{{ trick.name }}</h5></a>
            </div>


            {% if is_granted('ROLE_ADMIN') %}
                <div class="edit-links">
                    <a href="{{ path('trick_edit', {'id': trick.id}) }}" class="items-sm"><span class="oi oi-pencil" title="pencil" aria-hidden="true"></span></a>

                    <a href="javascript:void(0);" data-href="{{ path('trick_edit', {'id': trick.id, 'modal':1}) }}" class="openModal items-lg"><span class="oi oi-pencil" title="pencil" aria-hidden="true"></span></a>

                    <form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                        <input type="image" src="{{ asset('/open-iconic-master/svg/trash.svg') }}" style="height:18px">

                    </form>
                </div>
            {% endif %}
        </div>
        </div>

    </div>

{% else %}
    <div>no records found</div>
{% endfor %}


